{
    "name": "Slack/Discord Messages",
    "author": "VANet",
    "author-gh": "va-net",
    "author-site": "https://vanet.app",
    "class": "NotifyPlugin",
    "description": "Send Slack or Discord Messages when things happen",
    "tags": ["slack", "discord", "notifications", "official"],
    "version": {
        "tag": "2.0.0",
        "name": "Version 2.0.0",
        "date": "2021-06-01"
    },
    "installation": {
        "files": [
            "classes/controllers/NotifyPluginController.php",
            "classes/plugins/NotifyPlugin.php",
            "themes/default/views/admin/notify_plugin.php"
        ],
        "queries": [
            "INSERT INTO `options` (`name`, `value`) VALUES ('DISCORD_WEBHOOK', ''), ('DISCORD_WEBHOOK_PRIVATE', ''), ('SLACK_WEBHOOK', ''), ('SLACK_WEBHOOK_PRIVATE', '');"
        ]
    }
}
